{
  "name": "EliSum",
  "description": "extension that automatically summarizes content from the web",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/images/logo16.png",
      "32": "/assets/images/logo32.png",
      "48": "/assets/images/logo48.png",
      "128": "/assets/images/logo128.png"
    }
  },
  "icons": {
    "16": "/assets/images/logo16.png",
    "32": "/assets/images/logo32.png",
    "48": "/assets/images/logo48.png",
    "128": "/assets/images/logo128.png"
  }
}